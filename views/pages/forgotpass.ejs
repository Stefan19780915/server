<%- include('../partials/head') %>
<body>
  <%- include('../partials/msg') %> <%- include('../partials/header') %>
  <section class="secondary-section d-flex-center">
    <div class="container flow">
      <span></span>
      <div class="login">
        <h2>Send reset password link</h2>
        <% if (messages.error) { %>
        <p><%= messages.error %></p>
        <% } %>
      </div>
      <form method="POST" class="login-form flow" action="/resetpasslink">
        <div class="flow">
          <div>
            <label for="userEmail">Your Email</label>
            <input
              autocomplete="off"
              type="email"
              name="userEmail"
              value=""
              required
            />
          </div>
        </div>
        <div class="flow">
          <div class="d-flex-visible space-between">
            <button class="btn-primary dark-outline">Send</button>
          </div>
          <div style="height: 25px"></div>
        </div>
      </form>
    </div>
  </section>
</body>
<%- include('../partials/footer') %>
